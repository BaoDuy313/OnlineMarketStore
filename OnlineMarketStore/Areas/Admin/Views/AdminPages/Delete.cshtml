@model OnlineMarketStore.Models.Page

@{
    ViewData["Title"] = "Delete Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Delete" asp-route-id="@Model.PageId">
    <input type="hidden" asp-for="PageId" />
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPages" asp-action="Index">Page List</a>
                <span class="breadcrumb-item active">Delete Page</span>
            </nav>
        </div>
    </div>

    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                <div class="avatar avatar-image rounded" style="height:70px; width:70px">
                    <img src="~/images/pages/@Model.Thumb" alt="@Model.Title" />
                </div>
                <div class="m-l-15">
                    <h4 class="m-b-0">@Model.PageName</h4>
                    <p class="text-muted m-b-0">ID: #@Model.PageId</p>
                </div>
            </div>
            <div class="m-b-15">
                <input type="submit" value="Delete Confirm" class="btn btn-danger" />
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-overview">Overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-images">Product Images</a>
            </li>
        </ul>
    </div>
    <div class="container-fluid">
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active" id="product-overview">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">DELETE CONFIRM: @Model.PageName.ToUpper()</h4>
                        <div class="table-responsive">
                            <table class="product-info-table m-t-20">
                                <tbody>
                                    <tr>
                                        <td>Page Name:</td>
                                        <td class="text-dark font-weight-semibold">@Model.PageName</td>
                                    </tr>
                                    <tr>
                                        <td>Title:</td>
                                        <td>@Model.Title</td>
                                    </tr>
                                    <tr>
                                        <td>Brand:</td>
                                        <td>@Model.CreatedDate.Value.ToString("HH:mm dd/MM/yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td>Alias:</td>
                                        <td>@Model.Alias</td>
                                    </tr>
                                    <tr>
                                        <td>Ordering:</td>
                                        <td>@Model.Ordering</td>
                                    </tr>
                                    <tr>
                                        <td>Status:</td>
                                        @if (Model.Published)
                                        {


                                            <td>
                                                <span class="badge badge-pill badge-cyan">Public</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="badge badge-pill badge-red">Block</span>
                                            </td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Content</h4>
                    </div>
                    <div class="card-body">
                        <p>@Model.Contents</p>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="product-images">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <img class="img-fluid" src="~/images/pages/@Model.Thumb" alt="">
                            </div>
                            <div class="col-md-3">
                                <img class="img-fluid" src="~/images/pages/@Model.Thumb" alt="">
                            </div>
                            <div class="col-md-3">
                                <img class="img-fluid" src="~/images/pages/@Model.Thumb" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a class="btn btn-primary" asp-action="Index">Back to List</a>

</form>

