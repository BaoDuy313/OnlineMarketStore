@model OnlineMarketStore.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Product List</a>
            <span class="breadcrumb-item active">Product Information</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Product Information</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Product Name:</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Price:</td>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <td>Discount:</td>
                        <td>@Model.Discount</td>
                    </tr>
                    <tr>
                        <td>Category:</td>
                        <td>@Model.Cat.CatName</td>
                    </tr>
                    <tr>
                        <td>Date Created:</td>
                        <td>@Model.DateCreated.Value.ToString("HH:mm dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <td>Date Modified:</td>
                        <td>@Model.DateModified.Value.ToString("HH:mm dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <td>Best Sellers:</td>
                        <td>
                            @if (@Model.BestSellers)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-danger badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Home Flag:</td>
                        <td>
                            @if (@Model.HomeFlag)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-danger badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Active:</td>
                        <td>

                            @if (@Model.Active)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-danger badge-dot m-r-10"></div>
                                    <div>Block</div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Tags:</td>
                        <td>@Model.Tags</td>
                    </tr>
                    <tr>
                        <td>Image:</td>
                        <td>
                            <img src="~/images/products/@Model.Thumb" style="max-width: 200px" />
                        </td>
                    </tr>
                    <tr>
                        <td>Title:</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>UnitsInStock:</td>
                        <td>@Model.UnitsInStock</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Confirm Delete:</td>
                        <td>
                            <form asp-area="Admin" asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@Model.ProductId">
                                <input type="hidden" asp-for="ProductId" />
                                <input type="submit" value="Delete" class="btn btn-danger" />

                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>


