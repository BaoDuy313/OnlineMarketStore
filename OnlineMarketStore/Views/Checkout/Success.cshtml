@model OnlineMarketStore.ModelViews.OrderSuccessVM
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Styles{
    <style type="text/css">
        .nice-select .list {
            border-radius: 0px;
            overflow-y: auto;
            overflow: hidden;
            max-height: 200px;
            overflow-y: scroll;
        }

        .nice-select .option:hover, .nice-select .option.focus, .nice-select .option.selected.focus {
            color: red;
            background: none;
        }
    </style>
}




<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/assets/images/banner/2-1-1920x523.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Order Information</h2>
                        <ul>
                            <li>
                                <a href="/">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Order Information</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="checkout-area section-space-y-axis-100">
        <div class="container">
            <form>

                <div class="row">
                    <div class="col-lg-6 col-12">

                        <div class="checkbox-form">
                            <h3>Order Success</h3>
                            <p>Id Order: #@Model.OrderID</p>
                            <p>Thank you for your order</p>
                            <br />
                            <h3>Order Information</h3>
                            <p>Shipment Details</p>
                            <p>Author: @Model.FullName</p>
                            <p>Phone: @Model.Phone</p>
                            <p>Address: @Model.Address</p>
                            <br />
                            To view order details please visit <a asp-controller="Accounts" asp-action="Dashboard"><strong>Personal account.</strong></a> Need help? Contact us by phone number 0963102916
                        </div>
                    </div>
                    <div class="col-lg-6 col-12">
                        <img src="/assets/images/thanh-cong.jpeg" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</main>